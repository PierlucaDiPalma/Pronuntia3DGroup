<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/lineraLayoutEditText"
        android:layout_width="369dp"
        android:layout_height="298dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="110dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="208dp"
            android:layout_height="35dp"
            android:text="Nome bambino:"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="121dp" />

        <EditText
            android:id="@+id/CampoNomeBambino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="inserire nome"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="140dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivo richiesta:"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="206dp" />

        <EditText
            android:id="@+id/CampoMotivoRichiesta"
            android:layout_width="356dp"
            android:layout_height="77dp"
            android:hint="inserire motivazione della richiesta"
            android:inputType="textMultiLine"
            android:lines="4"
            android:padding="16dp"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="225dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserire durata terapia"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/InviaRichiestabtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="259dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="96dp"
        android:text="Invia"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineraLayoutEditText"></Button>



</androidx.constraintlayout.widget.ConstraintLayout>