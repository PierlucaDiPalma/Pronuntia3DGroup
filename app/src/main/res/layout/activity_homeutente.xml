<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Seleziona un profilo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/pulsanteGenitore"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:backgroundTint="#1A94D3"
        android:text="Genitore"
        android:textSize="16sp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/titolo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/textGenitore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genitore"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pulsanteGenitore"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="336dp" />




    <ScrollView
        android:id="@+id/scrollcontainer"
        android:layout_width="363dp"
        android:layout_height="176dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pulsanteAggiungiBambino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textGenitore"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:id="@+id/containerBambini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="vertical">


        </LinearLayout>


    </ScrollView>


    <ImageView
        android:id="@+id/pulsanteAggiungiBambino"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_add_24"
        android:text="Aggiungi profilo bambino"
        app:layout_constraintTop_toBottomOf="@+id/scrollcontainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi bambino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pulsanteAggiungiBambino"
         />


</androidx.constraintlayout.widget.ConstraintLayout>
