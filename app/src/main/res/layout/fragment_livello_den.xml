<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LivelloDen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/livello"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Livello 1"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <ImageView
            android:id="@+id/imageEx"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            />


        <TextView
            android:id="@+id/registrazioneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra la risposta"/>

        <Button
            android:id="@+id/recordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#068CA8"
            android:text="Registra"/>


        <Button
            android:id="@+id/speakButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#068CA8"
            android:text="Parla"/>



        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#E09E2F"
            android:text="Aiuto"
            />

        <TextView
            android:id="@+id/contenuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            android:textAlignment="center"
            />
    </LinearLayout>
</FrameLayout>