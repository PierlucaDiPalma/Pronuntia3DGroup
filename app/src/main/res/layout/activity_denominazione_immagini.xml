<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/denominazioneImmagini"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DenominazioneImmagini">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Denominazione immagini"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data"
                android:textAlignment="center"
                android:textSize="18dp"
                />

            <EditText
                android:id="@+id/titoloEsercizio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titolo esercizio"
                android:lines="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                />

            <ImageView
                android:id="@+id/imageEx"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/border"
                android:layout_marginTop="15dp"
                android:src="@drawable/baseline_add_24_blue" />

            <Button
                android:id="@+id/caricaImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carica immagine"
                android:layout_marginTop="15dp"
                android:backgroundTint="#068CA8"
                />

            <EditText
                android:id="@+id/aiuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Contenuto dell'immagine"/>

            <Button
                android:id="@+id/createDen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Aggiungi"
                android:backgroundTint="#068CA8"
                />
        </LinearLayout>


    </ScrollView>
  </LinearLayout>